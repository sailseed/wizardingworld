<!DOCTYPE html>
<html>
<head>
    <title>Historial de Ventas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="bg-light">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Historial de Ventas</h1>
            <a href="/mesas" class="btn btn-outline-secondary">Volver a Mesas</a>
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Código</th>
                            <th>Mesa / Destino</th>
                            <th>Total</th>
                            <th>Pago</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% history.forEach(item => { %>
                            <tr>
                                <td><span class="fw-bold"><%= item.service_code %></span></td>
                                <td>
                                    <%= item.mesa_name %>
                                    <% if(item.domicilio) { %>
                                        <br><small class="text-muted"><%= item.domicilio %></small>
                                    <% } %>
                                </td>
                                <td class="fw-bold text-success">$<%= item.total.toFixed(2) %></td>
                                <td><%= item.payment_method %></td>
                                <td class="small text-muted"><%= item.timestamp %></td>
                                <td>
                                    <% if(item.pagado) { %>
                                        <span class="badge bg-success">PAGADO ✅</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">COBRADO</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% if(history.length === 0) { %>
                <div class="p-5 text-center text-muted">No hay ventas cerradas todavía.</div>
            <% } %>
        </div>
    </div>
</body>
</html>
