<!DOCTYPE html>
<html>
<head>
    <title>Servicio: <%= service.mesa_name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <style>
        .qty-input { max-width: 60px; font-weight: bold; }
        .table-order { font-size: 1.1rem; }
        .btn-xl { padding: 15px 25px; font-size: 1.2rem; }
        .status-badge { font-size: 0.8rem; padding: 5px 10px; }
    </style>
</head>
<body class="bg-light">

<div class="container mt-3">
    <!-- CABECERA -->
    <div class="d-flex justify-content-between align-items-center mb-3 bg-white p-3 rounded shadow-sm border-start border-4 <%= service.service_code.startsWith('#R') ? 'border-info' : service.service_code.startsWith('#M') ? 'border-primary' : 'border-warning' %>">
        <div>
            <h2 class="mb-0">
                <%= service.mesa_name %>
                <% if(service.domicilio) { %> <small class="text-muted">- <%= service.domicilio %></small> <% } %>
            </h2>
            <span class="badge bg-dark fs-6"><%= service.service_code %></span>
        </div>

        <% if (!service.service_code.startsWith('#M')) { %>
            <form action="/mesas/service/<%= service.id %>/toggle-pagado" method="POST" class="bg-light p-2 rounded border">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="pagado" onChange="this.form.submit()" <%= service.pagado ? 'checked' : '' %>>
                    <label class="form-check-label fw-bold">PAGADO POR ADELANTADO</label>
                </div>
            </form>
        <% } %>

        <a href="/mesas" class="btn btn-outline-secondary">Volver</a>
    </div>

    <!-- ALERTA DE PAGO -->
    <% if (service.pagado) { %>
        <div class="alert alert-success text-center fw-bold shadow-sm">
            üí∞ ESTE PEDIDO YA EST√Å PAGADO
        </div>
    <% } %>

    <% const requiresCustomerPrint = service.mesa_type === 'regular'; %>
    <% if (requiresCustomerPrint && (!service.customer_ticket_printed || printRequired)) { %>
        <div class="alert alert-warning text-center fw-bold shadow-sm">
            üßæ Debes imprimir el ticket del cliente antes de registrar el pago.
        </div>
    <% } %>

    <!-- AGREGAR PRODUCTO -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-header bg-primary text-white fw-bold">Agregar Producto</div>
        <div class="card-body">
            <form action="/mesas/add-item/<%= service.id %>" method="POST" class="row g-3 align-items-end">
                <div class="col-12 col-md-4">
                    <label class="form-label small fw-bold">Buscar por c√≥digo o nombre</label>
                    <input
                        type="text"
                        id="productSearch"
                        class="form-control form-control-lg mb-2"
                        list="menuSuggestions"
                        placeholder="Ej: HA o Hamburguesa"
                        autocomplete="off"
                    >
                    <datalist id="menuSuggestions">
                        <% menu.forEach(m => { %>
                            <option value="<%= (m.code || '').toUpperCase() %>"><%= m.name %></option>
                            <option value="<%= m.name %>"><%= (m.code || '').toUpperCase() %></option>
                        <% }) %>
                    </datalist>

                    <select name="menu_item_id" id="menuSelect" class="form-select form-select-lg" required>
                        <option value="">Seleccionar...</option>
                        <% menu.forEach(m => { %>
                            <option value="<%= m.id %>" data-code="<%= (m.code || '').toUpperCase() %>" data-name="<%= m.name.toUpperCase() %>">[<%= m.code %>] <%= m.name %> - $<%= m.price %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="col-6 col-md-3">
                    <label class="form-label small fw-bold">Cantidad</label>
                    <div class="input-group input-group-lg">
                        <button type="button" class="btn btn-outline-secondary" onclick="changeQty(-1)">-</button>
                        <input type="number" name="quantity" id="qtyInput" class="form-control text-center qty-input" value="1" min="1" readonly>
                        <button type="button" class="btn btn-outline-secondary" onclick="changeQty(1)">+</button>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <label class="form-label small fw-bold">Comentario</label>
                    <input type="text" name="comment" class="form-control form-control-lg" placeholder="Ej: Sin cebolla">
                </div>

                <div class="col-12 col-md-2">
                    <button class="btn btn-primary btn-lg w-100">Agregar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- TABLA DE PRODUCTOS -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="table-responsive">
            <table class="table table-hover table-order mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">Cant.</th>
                        <th>Producto</th>
                        <th>Subtotal</th>
                        <th class="text-center">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <% let total = 0; %>
                    <% items.forEach(item => { %>
                        <% total += (item.price * item.quantity); %>
                        <tr>
                            <td class="ps-3 fw-bold">x<%= item.quantity %></td>
                            <td>
                                <div><%= item.name %></div>
                                <% if(item.comment) { %>
                                    <small class="text-danger fw-bold"><%= item.comment %></small>
                                <% } %>
                            </td>
                            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                            <td class="text-center">
                                <%- item.enviado ? '<span class="badge bg-success status-badge">Enviado ‚úÖ</span>' : '<span class="badge bg-warning text-dark status-badge">Pendiente ‚è≥</span>' %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-dark text-white d-flex justify-content-between align-items-center p-3">
            <span class="h4 mb-0">TOTAL:</span>
            <span class="h2 mb-0">$<%= total.toFixed(2) %></span>
        </div>
    </div>

    <!-- BOTONES -->
    <div class="row g-3 mb-5">
        <div class="col-12 col-md-4">
            <form action="/mesas/send-to-kitchen/<%= service.id %>" method="POST">
                <button class="btn btn-warning btn-xl w-100 shadow-sm fw-bold">üë®‚Äçüç≥ Enviar a Cocina</button>
            </form>
        </div>
        <% if (requiresCustomerPrint) { %>
            <div class="col-12 col-md-4">
                <form action="/mesas/print-receipt/<%= service.id %>" method="POST">
                    <button class="btn btn-info btn-xl w-100 shadow-sm fw-bold">üñ®Ô∏è Imprimir Ticket</button>
                </form>
            </div>
        <% } %>
        <div class="col-12 col-md-4">
            <% const canCloseService = !requiresCustomerPrint || service.customer_ticket_printed === 1; %>
            <button
                class="btn btn-success btn-xl w-100 shadow-sm fw-bold"
                data-bs-toggle="modal"
                data-bs-target="#closeModal"
                <%= canCloseService ? '' : 'disabled title="Primero imprime el ticket del cliente"' %>
            >üí∞ Registrar Pago</button>
        </div>
    </div>
</div>

<!-- MODAL PARA CERRAR CUENTA CON CALCULADORA DE CAMBIO -->
<div class="modal fade" id="closeModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <form action="/mesas/close/<%= service.id %>" method="POST" class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Finalizar Venta</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <input type="hidden" name="total" id="totalAmountHidden" value="<%= total %>">

                <div class="text-center mb-3">
                    <span class="text-muted d-block">Total a cobrar:</span>
                    <span class="display-5 fw-bold text-dark">$<%= total.toFixed(2) %></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">M√©todo de Pago:</label>
                    <select name="payment_method" id="methodSelect" class="form-select form-select-lg" required onchange="toggleCalculator()">
                        <option value="Efectivo">üíµ Efectivo</option>
                        <option value="Transferencia">üì± Transferencia</option>
                        <option value="Tarjeta">üí≥ Tarjeta</option>
                    </select>
                </div>

                <!-- CALCULADORA DE CAMBIO (Solo visible para Efectivo) -->
                <div id="calculatorSection" class="bg-light p-3 rounded border shadow-sm">
                    <div class="row align-items-center mb-3">
                        <div class="col-6">
                            <label class="small fw-bold">Recibido:</label>
                            <div class="h3 mb-0" id="displayRecibido">$0</div>
                        </div>
                        <div class="col-6 text-end">
                            <label class="small fw-bold">Cambio:</label>
                            <div class="h3 mb-0 text-success fw-bold" id="displayCambio">$0.00</div>
                        </div>
                    </div>

                    <!-- TECLADO NUM√âRICO -->
                    <div class="row g-2">
                        <% [1,2,3,4,5,6,7,8,9,0].forEach(num => { %>
                            <div class="col-4">
                                <button type="button" class="btn btn-outline-dark w-100 py-3 fs-4 fw-bold" onclick="pressKey('<%= num %>')"><%= num %></button>
                            </div>
                        <% }) %>
                        <div class="col-8">
                            <button type="button" class="btn btn-outline-danger w-100 py-3 fs-4 fw-bold" onclick="clearCalc()">BORRAR</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success btn-lg px-5">Confirmar Pago</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function changeQty(val) {
        const input = document.getElementById('qtyInput');
        let current = parseInt(input.value);
        if (current + val >= 1) {
            input.value = current + val;
        }
    }

    const productSearchInput = document.getElementById('productSearch');
    const menuSelect = document.getElementById('menuSelect');

    function normalizeText(value) {
        return (value || '').trim().toUpperCase();
    }

    function filterMenuOptions() {
        const term = normalizeText(productSearchInput.value);
        let matchedFirst = false;

        Array.from(menuSelect.options).forEach((option, index) => {
            if (index === 0) {
                option.hidden = false;
                return;
            }

            const code = normalizeText(option.dataset.code);
            const name = normalizeText(option.dataset.name);
            const matches = !term || code.includes(term) || name.includes(term);

            option.hidden = !matches;

            if (matches && !matchedFirst && term) {
                menuSelect.value = option.value;
                matchedFirst = true;
            }
        });

        if (!term) {
            menuSelect.value = '';
        }
    }

    if (productSearchInput && menuSelect) {
        productSearchInput.addEventListener('input', filterMenuOptions);
        productSearchInput.addEventListener('change', filterMenuOptions);

        menuSelect.addEventListener('change', () => {
            const selectedOption = menuSelect.options[menuSelect.selectedIndex];
            if (!selectedOption || !selectedOption.dataset) return;
            productSearchInput.value = selectedOption.dataset.code || selectedOption.dataset.name || '';
        });
    }
</script>
<script>
    let amountReceived = "";
    const totalToPay = parseFloat(document.getElementById('totalAmountHidden').value);

    function toggleCalculator() {
        const method = document.getElementById('methodSelect').value;
        const calc = document.getElementById('calculatorSection');
        if (method === 'Efectivo') {
            calc.style.display = 'block';
        } else {
            calc.style.display = 'none';
            clearCalc();
        }
    }

    function pressKey(num) {
        amountReceived += num;
        updateDisplay();
    }

    function clearCalc() {
        amountReceived = "";
        updateDisplay();
    }

    function updateDisplay() {
        const recibido = amountReceived === "" ? 0 : parseFloat(amountReceived);
        document.getElementById('displayRecibido').innerText = "$" + recibido;

        const cambio = recibido - totalToPay;
        const displayCambio = document.getElementById('displayCambio');

        if (cambio < 0) {
            displayCambio.innerText = "$0.00";
            displayCambio.classList.replace('text-success', 'text-muted');
        } else {
            displayCambio.innerText = "$" + cambio.toFixed(2);
            displayCambio.classList.replace('text-muted', 'text-success');
        }
    }

    // Ejecutar al cargar para asegurar que el estado inicial sea correcto
    toggleCalculator();
</script>

</body>
</html>
