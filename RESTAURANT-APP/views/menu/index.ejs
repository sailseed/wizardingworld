<!DOCTYPE html>
<html>
<head>
    <title>Inventario de Hamburguesas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="container mt-4">
    <a href="/" class="btn btn-sm btn-outline-secondary mb-3">← Dashboard</a>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Inventario</h1>
        <a href="/menu/agregar" class="btn btn-primary btn-lg">Agregar Item</a>
    </div>

    <ul class="list-group shadow-sm">
        <% items.forEach(item => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <div>
                    <strong class="h5">[<%= item.code %>]</strong>
                    <span class="h5 ms-2"><%= item.name %></span>
                    <span class="badge bg-success ms-2 fs-6">$<%= item.price %></span>
                </div>
                <a href="/menu/edit/<%= item.id %>" class="btn btn-outline-secondary">Editar</a>
            </li>
        <% }) %>
    </ul>

    <% if (items.length === 0) { %>
        <div class="alert alert-info mt-3 text-center">El inventario está vacío. Presiona "Agregar" para empezar.</div>
    <% } %>
</body>
</html>
