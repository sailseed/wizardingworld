<body class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white"><h2>Nuevo Gasto</h2></div>
        <div class="card-body">
            <form action="/gastos/agregar" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label>ID Generado</label>
                    <input type="text" name="g_code" value="<%= g_code %>" class="form-control bg-light" readonly>
                </div>
                <div class="mb-3">
                    <label>Descripci√≥n</label>
                    <input type="text" name="description" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label>Precio</label>
                    <input type="number" step="0.01" name="price" class="form-control" placeholder="0.00" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Foto del Recibo (Opcional)</label>
                    <!-- 'capture' attribute tells mobile browsers to open the camera -->
                    <input type="file" name="receipt" class="form-control" accept="image/*" capture="environment">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg w-100">Enviar</button>
                    <a href="/gastos" class="btn btn-light">Volver</a>
                </div>
            </form>
        </div>
    </div>
</body>
